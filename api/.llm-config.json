{
  "llm_protocol": "metadata-aware-selector",
  "source_url": "https://braindump.basecampgrounds.com",
  "pages": [
    {
      "name": "The Grimoire",
      "path": "/api/grimoire.json",
      "display_fields": [
        "name",
        "category",
        "label",
        "flavor"
      ]
    },
    {
      "name": "The Cave",
      "path": "/api/cave.json",
      "display_fields": [
        "name",
        "category",
        "label",
        "flavor"
      ]
    },
    {
      "name": "The Creator Hub",
      "path": "/api/creator-hub.json",
      "display_fields": [
        "name",
        "category",
        "label",
        "flavor"
      ]
    },
    {
      "name": "Utility",
      "path": "/api/utility.json",
      "display_fields": [
        "name",
        "category",
        "label",
        "flavor"
      ]
    }
  ],
  "metadata_handling": {
    "behavior": "apply_silently",
    "display_on_prompt": true,
    "reveal_triggers": [
      "what does * do",
      "explain *",
      "how does * work",
      "tell me more about *",
      "reveal metadata for *"
    ],
    "strict_mode": true,
    "notes": "Treat metadata as binding. Do not override or soften constraints."
  },
  "ui_behavior": {
    "initial_prompt": "Please select one of the following pages to reference: The Grimoire, The Cave, The Creator Hub, or Utility."
  }
}